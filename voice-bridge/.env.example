DISCORD_TOKEN=
GUILD_ID=
VOICE_CHANNEL_ID=
TEXT_CHANNEL_ID=

# Transcript â†’ reply routing (relay OpenClaw replies to TTS)
TRANSCRIBE_CHANNEL_ID=
REPLY_CHANNEL_ID=
RELAY_AUTHOR_IDS=
RELAY_IGNORE_FILLER=true
RELAY_DEBOUNCE_MS=0

# Allow bot messages to be spoken in TEXT_CHANNEL_ID
ALLOW_BOT_MESSAGES=true

# TTS provider: edge (default) or piper
TTS_PROVIDER=edge
TTS_PYTHON=./.venv/bin/python

# Edge TTS settings
EDGE_VOICE=en-GB-RyanNeural
EDGE_RATE=+0%
EDGE_PITCH=+0Hz
EDGE_VOLUME=+0%

# Piper (optional fallback)
PIPER_MODEL=voices/en_GB-northern_english_male-medium.onnx
PIPER_DATA_DIR=voices

# Optional: max characters per chunk
MAX_CHUNK=400

# Optional: tweak Piper prosody/tempo
PIPER_SPEAKER=
PIPER_LENGTH_SCALE=0.95
PIPER_NOISE_SCALE=
PIPER_NOISE_W_SCALE=
PIPER_SENTENCE_SILENCE=0.12

# Optional: only speak messages from these user IDs (comma-separated)
SPEAK_USER_IDS=

# Optional: ignore specific user IDs (comma-separated)
IGNORE_USER_IDS=
